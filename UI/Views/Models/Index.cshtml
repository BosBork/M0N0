@model IEnumerable<VehicleModelDTO>

@{
    ViewData["Title"] = "List of Models";
}

<form asp-action="Index" method="get" class="form-inline">

    <div class="form-group mb-2">
        <label for="src" class="mr-2">Search by ModelName:</label>
        <input type="text" name="name" id="src" value="@ViewBag.CurrentSearch" />
    </div>

    <div class="form-group mb-2">
        <label for="filter" class="ml-2 mr-2">Filter by MakeName: </label>
        <select id="filter" class="form-control form-control-sm mr-1" name="MakeIdFilterSelected" asp-items="ViewBag.DPSelectListItem"></select>
    </div>
    <input type="submit" value="Filter" class="btn btn-sm btn-dark mb-2" />
</form>


<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Abrv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleMakeId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Abrv)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VehicleMakeId)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
        }
    </tbody>
</table>
