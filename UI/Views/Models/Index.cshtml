@model PagedList<VehicleModelVM>

@{
    ViewData["Title"] = "List of Models";
}

<form asp-action="Index" method="get" class="form-inline">
    <div class="form-group mb-2">
        <label for="src" class="mr-2">Search by ModelName:</label>
        <input type="text" name="name" id="src" value="@ViewBag.CurrentSearch" />
    </div>

    <div class="form-group mb-2">
        <label for="filter" class="ml-2 mr-2">Filter by MakeName: </label>
        <select id="filter" class="form-control form-control-sm mr-1" name="MakeIdFilterSelected" asp-items="ViewBag.DPSelectListItem">
            <option value="">All</option>
        </select>
    </div>

    <input type="hidden" name="OrderBy" value="@ViewBag.CurrentSort" />

    <input type="submit" value="Filter" class="btn btn-sm btn-dark mb-2" />
</form>

@if (!Model.Any())
{
    <div class="badge-danger p-2 text-center text-capitalize font-weight-bold">no results found!</div>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    <a asp-action="Index" asp-route-orderby="@ViewBag.NameSortParam" asp-route-name="@ViewBag.CurrentSearch" asp-route-makeidfilterselected="@ViewBag.CurrentFilter">Name</a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-orderby="@ViewBag.AbrvSortParam" asp-route-name="@ViewBag.CurrentSearch" asp-route-makeidfilterselected="@ViewBag.CurrentFilter">Abrv</a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-orderby="@ViewBag.IdSortParam" asp-route-name="@ViewBag.CurrentSearch" asp-route-makeidfilterselected="@ViewBag.CurrentFilter">Make Id</a>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Abrv)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VehicleMakeId)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "UpdateVehicleModel", new { id = item.VehicleModelId }) |
                        @Html.ActionLink("Details", "GetVehicleModelById", new { id = item.VehicleModelId }) |
                        @Html.ActionLink("Delete", "DeleteVehicleModel", new { id = item.VehicleModelId })
                    </td>
                </tr>
            }
        </tbody>
    </table>

}

@{await Html.RenderPartialAsync("_FooterPagingPartial", Model);}
