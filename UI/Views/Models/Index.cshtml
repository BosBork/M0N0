@model PagedList<VehicleModelVM>

@{
    ViewData["Title"] = "List of Models";
}

<h2 class="badge-light p-2 text-center">List of Models</h2>
<hr />

<div class="container">
    <div class="row">
        <form asp-action="Index" method="get" class="form-inline">
            <div class="form-group mb-2">
                <label for="src" class="mr-2">Search by ModelName:</label>
                <input type="text" name="name" id="src" value="@ViewBag.CurrentSearch" />
            </div>

            <div class="form-group mb-2">
                <label for="filter" class="ml-2 mr-2">Filter by MakeName: </label>
                <select id="filter" class="form-control form-control-sm mr-1" name="MakeIdFilterSelected" asp-items="ViewBag.DPSelectListItem">
                    <option value="">All</option>
                </select>
            </div>
            <input type="hidden" name="OrderBy" value="@ViewBag.CurrentSort" />
            <input type="submit" value="Filter" class="btn btn-sm btn-dark mb-2" />
        </form>
        <a asp-action="index" class="btn btn-sm btn-secondary mb-2 ml-1">Reset</a>
        <a asp-action="Create" class="btn btn-sm btn-dark mb-2 ml-1">Create New Model</a>
    </div>
</div>

@if (!Model.Any())
{
    <div class="badge-danger p-2 text-center text-capitalize font-weight-bold">no results found!</div>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    <a asp-action="Index" asp-route-orderby="@ViewBag.NameSortParam" asp-route-name="@ViewBag.CurrentSearch" asp-route-makeidfilterselected="@ViewBag.CurrentFilter">@Html.DisplayNameFor(model => model[0].Name)</a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-orderby="@ViewBag.AbrvSortParam" asp-route-name="@ViewBag.CurrentSearch" asp-route-makeidfilterselected="@ViewBag.CurrentFilter">@Html.DisplayNameFor(model => model[0].Abrv)</a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-orderby="@ViewBag.IdSortParam" asp-route-name="@ViewBag.CurrentSearch" asp-route-makeidfilterselected="@ViewBag.CurrentFilter">@Html.DisplayNameFor(model => model[0].VehicleMakeId) ID</a>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Abrv)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VehicleMakeId)
                    </td>
                    <td class="text-center">
                        @Html.ActionLink("Edit", "Edit", new { id = item.VehicleModelId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.VehicleModelId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.VehicleModelId })
                    </td>
                </tr>
            }
        </tbody>
    </table>

}

@{await Html.RenderPartialAsync("_FooterPagingPartial", Model);}
