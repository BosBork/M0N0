@model IPagedList 
    <!--dynamic-->

@{
    var prevDisabled = !Model.HasPrevious ? "disabled" : "";
    var nextDisabled = !Model.HasNext ? "disabled" : "";
    var active = "active";
}

<nav aria-label="Page navigation">
    @if (Model.EndPage > 1)
    {
        <ul class="pagination">

            @*@if (Model.CurrentPage > 1)
                {*@
            <li class="page-item @prevDisabled">
                <a asp-action="Index"
                   asp-route-orderby="@ViewBag.CurrentSort"
                   asp-route-name="@ViewBag.CurrentSearch"
                   asp-route-makeidfilterselected="@ViewBag.CurrentFilter"
                   class="page-link">
                    First
                </a>
            </li>
            <li class="page-item @prevDisabled">
                <a asp-action="Index"
                   asp-route-orderby="@ViewBag.CurrentSort"
                   asp-route-name="@ViewBag.CurrentSearch"
                   asp-route-pagenumber="@(Model.CurrentPage - 1)"
                   asp-route-makeidfilterselected="@ViewBag.CurrentFilter"
                   class="page-link">
                    Previous
                </a>
            </li>
            @*}*@

            @for (var PAGE = Model.StartPage; PAGE <= Model.EndPage; PAGE++)
            {
                <li class="page-item @(PAGE == Model.CurrentPage ? active : "")">
                    <a asp-action="Index"
                       asp-route-orderby="@ViewBag.CurrentSort"
                       asp-route-name="@ViewBag.CurrentSearch"
                       asp-route-pagenumber="@PAGE"
                       asp-route-makeidfilterselected="@ViewBag.CurrentFilter"
                       class="page-link">
                        @PAGE
                    </a>
                </li>
            }

            @*@if (Model.CurrentPage < Model.TotalPages)
                {*@
            <li class="page-item @nextDisabled">
                <a asp-action="Index"
                   asp-route-orderby="@ViewBag.CurrentSort"
                   asp-route-name="@ViewBag.CurrentSearch"
                   asp-route-pagenumber="@(Model.CurrentPage + 1)"
                   asp-route-makeidfilterselected="@ViewBag.CurrentFilter"
                   class="page-link">
                    Next
                </a>
            </li>
            <li class="page-item @nextDisabled">
                <a asp-action="Index"
                   asp-route-orderby="@ViewBag.CurrentSort"
                   asp-route-name="@ViewBag.CurrentSearch"
                   asp-route-pagenumber="@(Model.TotalPages)"
                   asp-route-makeidfilterselected="@ViewBag.CurrentFilter"
                   class="page-link">
                    Last
                </a>
            </li>
            @*}*@

        </ul>
    }
</nav>