@model PagedList<VehicleModelVM>

@{
    var prevDisabled = !Model.HasPrevious ? "disabled" : "";
    var nextDisabled = !Model.HasNext ? "disabled" : "";
}

@*<span class="badge-dark p-1 float-right">@Model.CurrentPage</span>*@

<nav aria-label="Page navigation">
    <ul class="pagination">
        <li class="page-item @prevDisabled">
            <a asp-action="Index"
               asp-route-orderby="@ViewBag.CurrentSort"
               asp-route-name="@ViewBag.CurrentSearch"
               asp-route-pagenumber="@(Model.CurrentPage - 1)"
               asp-route-makeidfilterselected="@ViewBag.CurrentFilter"
               class="page-link">
                Previous
            </a>
        </li>

        @for (var PAGE = Model.StartPage; PAGE <= Model.EndPage; PAGE++)
        {
            <li class="page-item @(PAGE == Model.CurrentPage ? "active" : "")">
                @*<a class="page-link" href="~/Models?pagenumber=@PAGE">@PAGE</a>*@
                <a asp-action="Index"
                   asp-route-orderby="@ViewBag.CurrentSort"
                   asp-route-name="@ViewBag.CurrentSearch"
                   asp-route-pagenumber="@PAGE"
                   asp-route-makeidfilterselected="@ViewBag.CurrentFilter"
                   class="page-link">
                    @PAGE
                </a>
            </li>
        }

        <li class="page-item @nextDisabled">
            <a asp-action="Index"
               asp-route-orderby="@ViewBag.CurrentSort"
               asp-route-name="@ViewBag.CurrentSearch"
               asp-route-pagenumber="@(Model.CurrentPage + 1)"
               asp-route-makeidfilterselected="@ViewBag.CurrentFilter"
               class="page-link">
                Next
            </a>
        </li>
    </ul>
</nav>